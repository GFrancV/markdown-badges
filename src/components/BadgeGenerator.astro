---
import { Image } from "astro:assets";

const defaultBadge =
  "https://img.shields.io/badge/github-%23121011.svg?style=for-the-badge&logo=github&logoColor=white";
const classListCode =
  "block bg-[#1e1e1e] rounded-sm p-3 pt-9 text-sm text-[#f1f1ef] shadow-lg mb-4 overflow-x-auto w-full";
---

<badge-image id="badge" class="flex flex-col gap-4 items-center justify-center">
  <Image
    src={defaultBadge}
    alt="Default badge"
    width={100}
    height={28}
    class="w-auto"
    loading="lazy"
  />
  <pre
    id="code-markdown"
    class="relative group flex w-full">
		<code class:list={classListCode} />
	</pre>
  <pre
    id="code-html"
    class="relative group flex w-full">
		<code class:list={classListCode} />
	</pre>
</badge-image>

<script>
  import { BadgeGenerator } from "../utils/BadgeGenerator";

  customElements.define("badge-image", BadgeGenerator);
</script>
